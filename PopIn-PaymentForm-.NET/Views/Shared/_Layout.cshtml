<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Payment</title>
    <link rel="stylesheet" href="~/css/classic.css" />

    <script src="@ViewData["url"]static/js/krypton-client/V4.0/stable/kr-payment-form.min.js"
            kr-public-key="@ViewData["js_token"]" kr-post-url-success="/Payment/respuesta">
    </script>
    <!--  estilo clasico-->
    <link rel="stylesheet"
          href="@ViewData["url"]static/js/krypton-client/V4.0/ext/classic-reset.css">
    <script src="@ViewData["url"]static/js/krypton-client/V4.0/ext/classic.js">
    </script>

    <!--  estilo neon-->
    <!--<link rel="stylesheet"
              href="@ViewData["url"]static/js/krypton-client/V4.0/ext/neon-reset.min.css">
        <script src="@ViewData["url"]static/js/krypton-client/V4.0/ext/neon.js">
        </script>-->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous" />
    @RenderSection("Extralink", required: false)
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #ff2d46;
        }

        .nav-bar {
            display: flex;
            width: 100%;
            justify-content: center;
            margin-bottom: 20px;
        }

        div.card {
            width: 360px;
        }

        .btn-izi {
            background-color: #00a09d;
            display: block;
            margin: 0 auto;
        }

            .btn-izi:hover {
                background-color: #08b9b6;
            }

        p, h1 {
            color: white;
        }

        pre {
            background-color: #000000;
            white-space: pre-wrap;
            color: white;
        }
    </style>
    @RenderSection("Extracss", required: false)
</head>

<body style="background-color: #FF2D46;">
    <!-- ===============================================-->
    <!--    Main Content-->
    <!-- ===============================================-->
    <main class="main" id="top">
        <div class="container-fluid" data-layout="container">
            <div class="content">
                <nav class="nav-bar">
                    <a asp-controller="Payment" asp-action="Index">
                        <img class="izi-image" src="https://iziweb001b.s3.amazonaws.com/webresources/img/logo.png" width="150" alt="Logo" />
                    </a>
                </nav>
                @RenderBody()
            </div>
        </div>
    </main>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>